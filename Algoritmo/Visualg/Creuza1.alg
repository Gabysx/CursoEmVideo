algoritmo "Creuza1"
// Função :
// Autor :
// Data : 05/02/2022
// Seção de Declarações 
var
      nascimento, ano_atual, idade: inteiro

inicio
      Escreval("Em que ano estamos?")
      leia(ano_atual)
      Escreval("Digite seu ano de nascimento")
      leia(nascimento)
      idade <- ano_atual - nascimento
      Escreval("Sua idade é:",idade, " anos.")
fimalgoritmo
